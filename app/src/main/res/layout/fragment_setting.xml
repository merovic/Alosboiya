<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="Mohamed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="الرصيد الحالي "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/real"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/userbalance"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="600"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:text="تعديل الملف الشخصي"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/usernameedit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:textSize="20sp"
                android:text="mhndteama"
                android:gravity="right"
                android:padding="5dp"
                android:background="@drawable/accountedittext"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="الاسم"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/userphoneedit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="01150552551"
                android:gravity="right"
                android:padding="5dp"
                android:inputType="phone"
                android:background="@drawable/accountedittext"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="الجوال"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/userimageedit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:hint="اختر صورة جديدة"
                android:editable="false"
                android:inputType="none"
                android:padding="5dp"
                android:textStyle="bold"
                android:background="@drawable/accountedittext"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="الصورة"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/userpasswordedit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="123456789"
                android:gravity="right"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/accountedittext"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="كلمة المرور"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="6dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Spinner
                android:id="@+id/usercityedit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/accountedittext"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="المدينة"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/savebutton"
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="حفظ التعديلات"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/bluebutton"/>

    </LinearLayout>

</LinearLayout>
