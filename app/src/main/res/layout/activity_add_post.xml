<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
                                       style="@style/ToolBarStyle"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:background="#4798CF"
                                       android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <alosboiya.jeddahwave.Utils.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="اضافة اعلان"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="hesham"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="الرصيد الحالي "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/real"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/userbalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="600"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="عنوان الاعلان (سيارة للبيع-عقار للبيع-الخ٠٠)"
                android:id="@+id/add_title"
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/accountedittext"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:id="@+id/add_imgs"
                android:hint="اضف الصور"
                android:padding="5dp"
                android:editable="false"
                android:inputType="none"
                android:background="@drawable/accountedittext"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:hint="المدينة"
                android:id="@+id/add_depart"
                android:padding="5dp"
                android:textSize="18sp"
                android:background="@drawable/accountedittext"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:hint="المدينة"
                android:id="@+id/add_sub"
                android:padding="5dp"
                android:textSize="18sp"
                android:background="@drawable/accountedittext"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:hint="الجوال"
                android:id="@+id/add_phone"
                android:inputType="phone"
                android:gravity="right"
                android:padding="5dp"
                android:textSize="18sp"
                android:background="@drawable/accountedittext"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:hint="المدينة"
                android:entries="@array/madena"
                android:id="@+id/add_madena"
                android:padding="5dp"
                android:textSize="18sp"
                android:background="@drawable/accountedittext"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:hint="وصف الاعلان"
                android:id="@+id/add_desc"
                android:padding="10dp"
                android:textSize="20sp"
                android:gravity="right"
                android:background="@drawable/accountedittext"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/bluebutton"
                android:text="اضف اعلان"
                android:id="@+id/add_post"
                android:textColor="#fff"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>