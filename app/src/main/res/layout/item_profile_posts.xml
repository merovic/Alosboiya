<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#F0EFF5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sales_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:src="@drawable/car"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layoutDirection="rtl"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sales_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="#008000"
                    android:textStyle="bold"
                    android:textDirection="rtl"
                    android:text="عمارة جديدة"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"/>

                <TextView
                    android:id="@+id/sales_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textColor="#008ae6"
                    android:textSize="12sp"
                    android:text="22/1/2015"
                    tools:ignore="RtlHardcoded"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/saller_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#0f0f0a"
                        android:textSize="14sp"
                        android:padding="3dp"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textDirection="ltr"
                        android:gravity="right"
                        android:text="احمد ابراهيم"
                        tools:ignore="RtlCompat,RtlHardcoded"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layoutDirection="rtl"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/location"/>

                        <TextView
                            android:id="@+id/location_name"
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:textColor="#0f0f0a"
                            android:textSize="14sp"
                            android:textAlignment="textStart"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="5dp"
                            android:lines="1"
                            android:textDirection="rtl"
                            android:text="المدينة المنورة"
                            tools:ignore="RtlCompat"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/deletepost"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:text="حذف"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/orangbutton"/>

        <Button
            android:id="@+id/updatepost"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="تحديث"
            android:background="@drawable/greenbutton"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/editpost"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="تعديل"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:background="@drawable/greenbutton"/>

    </LinearLayout>

</LinearLayout>