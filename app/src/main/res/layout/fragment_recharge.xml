<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="مصنع كنعان للاعلاف ادارة شركة فجر العزيزة"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="الرصيد الحالي "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/real"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/userbalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="600"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp">


        <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            segmentedgroup:sc_tint_color="@color/colorPrimary"
            segmentedgroup:sc_checked_text_color="#FFF"
            segmentedgroup:sc_border_width="1.5dp"
            segmentedgroup:sc_corner_radius="5dp">


            <RadioButton
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="استخدام الفيزا"
                style="@style/RadioButton" />

            <RadioButton
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="استخدام كروت الشحن"
                style="@style/RadioButton" />

        </info.hoang8f.android.segmented.SegmentedGroup>

        <LinearLayout
            android:id="@+id/threelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center">

            <EditText
                android:id="@+id/n2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/accountedittext"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/n1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/accountedittext"
                android:gravity="center"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/n3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/accountedittext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">


            <Spinner
                android:id="@+id/rechargespinner"
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:layout_gravity="center"
                android:padding="7dp"
                android:background="@drawable/accountedittext"
                tools:ignore="RtlHardcoded"/>

        </LinearLayout>

        <Button
            android:id="@+id/rechargebutton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/bluebutton"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="شحن الرصيد"
            android:textColor="#fff"
            android:textSize="18sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/restorebutton"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/bluebutton"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="استرجاع المدفوعات"
        android:textColor="#fff"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:textSize="18sp"/>

</RelativeLayout>
